<?xml version="1.0" encoding="utf-8"?>
<!-- 该文件是 作业结果查看界面 listview 中的一个子项目 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/textWhite"
    android:orientation="horizontal" 
    android:paddingLeft="15dp"
    android:paddingRight="10dp">
    
    <View 
       android:id="@+id/task_detail_pic"
       android:layout_width="24dp"
       android:layout_height="24dp"
       android:layout_marginTop="26dp"
       android:layout_marginRight="10dp"
       android:background="@drawable/right_count"/>
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@drawable/linearlayout_frame_circle_left_gray"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:layout_weight="1">
                   
       <TextView 
           android:id="@+id/task_questionName_textview"
           android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="做一做1.2.4"
	        android:textColor="@color/textGray"
	        android:textSize="16sp"/>
             
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/right_layout"
        android:layout_width="70dp"
        android:layout_height="44dp"
        android:background="@drawable/linearlayout_frame_circle_right_red"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="16dp"
        android:gravity="center">
        <TextView 
	        android:id="@+id/task_questionPage_textview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="前 13 天"
	        android:textColor="@color/textWhite"
	        android:textSize="16sp"/>
    </LinearLayout>
    
</LinearLayout>
