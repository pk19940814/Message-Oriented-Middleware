<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="@color/textWhite"
    android:orientation="horizontal" 
    android:paddingRight="10dp">
    
    <!-- 左边的时钟图片 -->
    <LinearLayout 
        android:layout_height="76dp"
        android:layout_width="50dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView 
            android:id="@+id/leftTop_line"
            android:layout_width="2dp"
            android:layout_height="33dp"
            android:background="@color/title_bg"/>
        <ImageView
	        android:id="@+id/leftTime_pic" 
	        android:layout_height="26dp"
	        android:layout_width="26dp"
	        android:background="@drawable/time_pic"/>
        <ImageView 
            android:id="@+id/leftButtom_line"
            android:layout_width="2dp"
            android:layout_height="17dp"
            android:background="@color/title_bg"/>
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/linearlayout_frame_circle_gray"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
        
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp">
	        
	        <TextView 
	          android:id="@+id/notice_source_textview"
	          android:layout_height="wrap_content"
	          android:layout_width="wrap_content"
	          android:text="学校通知"
	          android:textSize="18sp"
	          android:textColor="@color/textBlack"/>
	        <ImageView 
	          android:id="@+id/new_img"
	          android:layout_width="22dp"
	          android:layout_height="12dp"
	          android:layout_marginLeft="2dp"
	          android:background="@drawable/new_pic"/>
	        <TextView 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"/>
	        <TextView
	       	  android:id="@+id/notice_publishTime_textview"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_gravity="right"
	          android:text="2015年3月12日   17：30"          
	          android:textSize="12sp"
	          android:textColor="@color/textGray"/>
	        
	    </LinearLayout>
		    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        <TextView 
		       android:id="@+id/notice_summary_textview"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:layout_marginLeft="15dp" 
		       android:text="通知：请参。。。"
		       android:textSize="14sp"
		       android:textColor="@color/textGray"/>
	        <TextView 
	           android:layout_width="0dp"
	           android:layout_height="match_parent"
	           android:layout_weight="1"/>
	        <ImageView 
	           android:layout_width="10dp"
	           android:layout_height="14dp"
	           android:layout_marginRight="10dp"
	           android:layout_gravity="center"
	           android:background="@drawable/btn_right"/>
	    </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
