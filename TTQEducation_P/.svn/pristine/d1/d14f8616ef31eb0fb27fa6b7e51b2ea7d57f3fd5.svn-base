<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#efefef">
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    android:background="#efefef"
	    android:orientation="vertical">
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/title_bg"
	        android:gravity="center">
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/others_top"/>
	        
	    </LinearLayout>
		
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:orientation="vertical">
	        <TextView 
	            android:id="@+id/parentName_textView"
	            android:layout_width="match_parent"
	            android:layout_height="45dp"
	            android:gravity="center"
	            android:text="高勇家长，您好！"
	            android:textSize="20sp"
		        android:textColor="#595757"
		        android:textStyle="bold"
	            />
	        <TextView 
	            android:id="@+id/reminderInfo_textView"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:padding="10dp"
	            android:text="您的服务将于2015年5月1日到期，请及时在 服务缴费 中续费"
	            android:textSize="14sp"
	            android:textColor="@color/textGray"
	            />       
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:orientation="vertical">       
	        <LinearLayout 
	            android:id="@+id/layout_payment"
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:layout_marginLeft="20dp"
	            android:layout_marginRight="20dp"
	            android:layout_marginBottom="6dp"
	            android:orientation="horizontal"
	            android:gravity="center_vertical"
	            android:background="@drawable/linearlayout_frame_circle_white">
	            <ImageView 
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:layout_marginLeft="10dp"
	                android:background="@drawable/payment"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:text="服务缴费"
	                android:textColor="@color/textGray"
	                android:textSize="16sp"/>
	            <View 
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"/>
	            <ImageView 
	                android:layout_width="13dp"
	                android:layout_height="20dp"
	                android:background="@drawable/btn_right"
	                android:layout_marginRight="10dp"/>
	        </LinearLayout>
	
	        <LinearLayout 
	            android:id="@+id/layout_tryout"
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:layout_marginLeft="20dp"
	            android:layout_marginRight="20dp"
	            android:layout_marginBottom="6dp"
	            android:orientation="horizontal"
	            android:gravity="center_vertical"
	            android:background="@drawable/linearlayout_frame_circle_white">
	            <ImageView 
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:layout_marginLeft="10dp"
	                android:background="@drawable/tryout"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:text="申请试用"
	                android:textColor="@color/textGray"
	                android:textSize="16sp"/>
	            <View 
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"/>
	            <ImageView 
	                android:layout_width="13dp"
	                android:layout_height="20dp"
	                android:background="@drawable/btn_right"
	                android:layout_marginRight="10dp"/>
	        </LinearLayout>
	
	        <LinearLayout 
	            android:id="@+id/layout_changePwd"
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:layout_marginLeft="20dp"
	            android:layout_marginRight="20dp"
	            android:layout_marginBottom="6dp"
	            android:orientation="horizontal"
	            android:gravity="center_vertical"
	            android:background="@drawable/linearlayout_frame_circle_white">
	            <ImageView 
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:layout_marginLeft="10dp"
	                android:background="@drawable/changepwd"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:text="个人设置"
	                android:textColor="@color/textGray"
	                android:textSize="16sp"/>
	            <View 
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"/>
	            <ImageView 
	                android:layout_width="13dp"
	                android:layout_height="20dp"
	                android:background="@drawable/btn_right"
	                android:layout_marginRight="10dp"/>
	        </LinearLayout>
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	            android:id="@+id/layout_exit"
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:layout_margin="20dp"
	            android:orientation="horizontal"
	            android:gravity="center_vertical"
	            android:background="@drawable/linearlayout_frame_circle_white">
	            <ImageView 
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:layout_marginLeft="10dp"
	                android:background="@drawable/exit"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:text="退出系统"
	                android:textColor="@color/textGray"
	                android:textSize="16sp"/>
	            <View 
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"/>
	            <ImageView 
	                android:layout_width="13dp"
	                android:layout_height="20dp"
	                android:background="@drawable/btn_right"
	                android:layout_marginRight="10dp"/>
	        </LinearLayout>
	        
	</LinearLayout>
    
</ScrollView>
