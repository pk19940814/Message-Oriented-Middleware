<?xml version="1.0" encoding="utf-8"?>
<!-- 该文件是 成绩排名详情界面 listview 中的一个子项目 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/textWhite"
    android:orientation="horizontal" 
    android:paddingRight="10dp">
    
    <ImageView
        android:id="@+id/leftTime_pic" 
        android:layout_height="match_parent"
        android:layout_width="46dp"
        android:background="@drawable/time_pic1"/>
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/linearlayout_frame_circle_gray"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView 
		        android:id="@+id/untillWeek_textview"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="2dp"
		        android:text="截止到底1周"
		        android:textColor="#575757"
		        android:textStyle="bold"
		        android:textSize="14sp"/>
            <TextView 
		        android:id="@+id/ranking_textview"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginBottom="5dp"
		        android:text="知识点排名为：5"
		        android:textColor="@color/textGray"
		        android:textSize="14sp"/>
            
        </LinearLayout>
        
        
	    <TextView 
	        android:id="@+id/rightPercent_textview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="6dp"
	        android:text="掌握度为：32%"
	        android:textColor="@color/textGray"
	        android:textSize="12sp"/>
	    
        
    </LinearLayout>
    
    
    
</LinearLayout>
