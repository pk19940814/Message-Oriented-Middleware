<?xml version="1.0" encoding="utf-8"?>
<!-- 该文件是 作业结果查看界面 listview 中的一个子项目 -->

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_gray">
    
    <LinearLayout
	    android:id="@+id/item_bg_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/linearlayout_frame_circle_blue"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:orientation="horizontal">
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" 
		    android:gravity="center_vertical"
		    android:layout_marginTop="6dp"
		    android:layout_marginBottom="6dp"
		    android:paddingLeft="15dp"
		    android:paddingRight="15dp">
	        
	         <LinearLayout 
		        android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:orientation="horizontal"
			    android:gravity="center_vertical" 
			    >		    
	             <TextView 
	                 android:id="@+id/unitTestRank_textView"
	                 android:layout_width="30dp"
	                 android:layout_height="30dp"
	                 android:background="@drawable/btn_circle_black"
	                 android:gravity="center"
	                 android:textColor="@color/textWhite"
	                 android:textStyle="bold"
	                 android:textSize="20sp"/>
	             <TextView 
	                 android:id="@+id/stuName_textView"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginLeft="16dp"
	                 android:text="张三"
	                 android:textSize="16sp"
	                 android:textColor="@color/textGray"/>
	             	        
		    </LinearLayout>
		    <TextView
		       android:id="@+id/testScore_textview"
	           android:layout_width="110dp"
	           android:layout_height="wrap_content"
	           android:layout_marginRight="10dp"
	           android:text="得分：98"          
	           android:textSize="16sp"
	           android:textColor="@color/textGray"/>
	        
	    </LinearLayout>
	    
	</LinearLayout>
    
    
</LinearLayout>
