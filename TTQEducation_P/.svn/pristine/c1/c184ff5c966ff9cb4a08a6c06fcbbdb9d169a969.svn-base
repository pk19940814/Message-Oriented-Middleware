<?xml version="1.0" encoding="utf-8"?>
<!-- 该文件是 作业结果查看界面 listview 中的一个子项目 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/textWhite"
    android:orientation="horizontal" 
    android:paddingRight="10dp">
    
    <ImageView
        android:id="@+id/leftTime_pic" 
        android:layout_height="match_parent"
        android:layout_width="46dp"
        android:background="@drawable/time_pic1"/>
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:background="@drawable/linearlayout_frame_circle_left_gray"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        >
        	    
        <TextView 
            android:id="@+id/error_questionName_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="做一做 1.1"
            android:textSize="16sp"
            android:textColor="@color/textBlack"/>
        
        <TextView 
            android:id="@+id/error_questionAnswer_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正确答案: 21"
            android:textSize="14sp"
            android:textColor="@color/textGray"/>  
    </LinearLayout>
    
     <LinearLayout 
        android:id="@+id/right_layout"
        android:layout_width="70dp"
        android:layout_height="44dp"
        android:background="@drawable/linearlayout_frame_circle_right_red"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="16dp"
        android:gravity="center">
           
        <TextView
	       android:id="@+id/error_questionPage_textview"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="第  7 页"          
           android:textSize="15sp"
           android:textColor="@color/textWhite"/>
    </LinearLayout>
    
</LinearLayout>
