<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:background="@drawable/ll_knowledge_detail_item" >
    
    <TextView
        android:id="@+id/tvOrderNum" 
        android:layout_width="48dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="1"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/ll_knowledge_detail_order_dual" />
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/tvKnowledgePointName" 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="知识点"
            android:textSize="16sp"
        	android:textColor="#000000"/>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#CCCCCC"/>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
           
            <!-- 个人掌握度 -->
            <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:orientation="vertical">
            
                <!-- 个人掌握度 -->
                <TextView 
		            android:layout_width="match_parent"
		            android:layout_height="24dp"
		            android:gravity="center"
		            android:text="个人掌握度"
		            android:textSize="14sp"
		        	android:textColor="#000000"/>
                
            	<LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal"
		            android:layout_gravity="center"
		            android:gravity="center_vertical">
            		
            	    <ImageView 
            	        android:layout_width="13dp"
            	        android:layout_height="11.33dp"
            	        android:src="@drawable/knowledge_point_detail_1"/>
            		
            	    <TextView
            	        android:id="@+id/tvRightPersent" 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="2dp"
			            android:gravity="center"
			            android:text="90%"
			            android:textSize="14sp"
			        	android:textColor="#000000"/>
        		</LinearLayout>
        	</LinearLayout>
        	
            <!-- 班级最高掌握度 -->
            <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:orientation="vertical">
            
                <!-- 班级最高掌握度 -->
                <TextView 
		            android:layout_width="match_parent"
		            android:layout_height="24dp"
		            android:gravity="center"
		            android:text="班级最高掌握度"
		            android:textSize="14sp"
		        	android:textColor="#000000"/>
                
            	<LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal"
		            android:layout_gravity="center"
		            android:gravity="center_vertical">
            		
            	    <ImageView 
            	        android:layout_width="13dp"
            	        android:layout_height="11.33dp"
            	        android:src="@drawable/knowledge_point_detail_2"/>
            		
            	    <TextView
            	        android:id="@+id/tvMaxRightPersent" 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="2dp"
			            android:gravity="center"
			            android:text="88%"
			            android:textSize="14sp"
			        	android:textColor="#000000"/>
        		</LinearLayout>
        	</LinearLayout>              
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
