<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/choose_school_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
  
 	 <ImageView
        android:id="@+id/ivChooseSchool"
        android:layout_width="184dp"
        android:layout_height="97dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/task_type_choose_top"
        android:scaleType="centerCrop"/>

   
    <!-- 学校代码输入框 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
       	android:gravity="center_vertical"
       	android:layout_marginTop="56dp"
       	android:layout_marginLeft="20dp"
       	android:layout_marginRight="20dp"
        android:background="@drawable/loginbox" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/choose_school_05" />

        <AutoCompleteTextView
            android:id="@+id/edit_schoolCode"
            android:layout_width="match_parent"
            android:layout_height="32dp" 
            android:layout_marginLeft="16dp"                
            android:background="@null"
            android:ems="10"
            android:hint="请输入学校代码"
            android:textColorHint="@color/texthintcolor"
            android:completionThreshold="1"
            android:inputType="textCapCharacters" />
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/yes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
       	android:layout_marginRight="20dp"
        android:background="@drawable/loginbutton"
        android:gravity="center"
        android:text="确认"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />          
	
    <View 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="www.guansir.me"
        android:textSize="12sp"
        android:textColor="@color/textWhite"/>
    
 <!--   <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="www.guansir.me"
        android:textSize="12sp"
        android:textColor="@color/textWhite"/>
  -->
</LinearLayout>
