<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_center_bg"
    android:orientation="vertical" >
      
    <!-- 类似于上面的anctionBar -->
    <include 
        android:id="@+id/action_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/action_bar"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView 
            android:layout_width="match_parent"
        	android:layout_height="50dp"
        	android:background="@drawable/message_top"/>
    </LinearLayout>
    <!-- Spinner -->
    <!-- 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner 
            android:id="@+id/customizedLeftSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner 
            android:id="@+id/customizedRightSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout> 
    -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout 
            android:id="@+id/businessChooseLinearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/businessChooseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普通业务"
                android:textSize="20sp"/>
            <ImageView 
                android:id="@+id/businessChooseImageView"
                android:layout_width="11.67dp"
                android:layout_height="6.33dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/item_task_result_b"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/subjectChooseLinearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView 
                android:id="@+id/subjectChooseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科目"
                android:textSize="20sp"/>
            <ImageView 
                android:id="@+id/subjectChooseImageView"
                android:layout_width="11.67dp"
                android:layout_height="6.33dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/item_task_result_b"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.ttqeducation.myViews.MyListView
        	android:id="@+id/listView_payment_choose"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:divider="@color/main_center_bg"
        	android:dividerHeight="10dp">
    	</com.ttqeducation.myViews.MyListView>
    	<LinearLayout 
    	    android:id="@+id/showAllBusinessLinearLayout"
    	    android:layout_width="fill_parent"
    	    android:layout_height="fill_parent"
    	    android:orientation="vertical"
    	    android:visibility="gone">
    	    <ListView 
    	        android:id="@+id/selectBusinessListView"
    	        android:layout_width="fill_parent"
    	        android:layout_height="wrap_content"
    	        android:divider="#FFFFFF"
    	        android:dividerHeight="8dp"
    	        android:background="#FFFFFF">
    	    </ListView>
    	</LinearLayout>
    	<LinearLayout 
    	    android:id="@+id/showAllSubjectLinearLayout"
    	    android:layout_width="fill_parent"
    	    android:layout_height="fill_parent"
    	    android:orientation="vertical"
    	    android:visibility="gone">
    	    <ListView 
    	        android:id="@+id/selectSubjectListView"
    	        android:layout_width="fill_parent"
    	        android:layout_height="wrap_content"
    	        android:divider="#FFFFFF"
    	        android:dividerHeight="8dp"
    	        android:background="#FFFFFF">
    	    </ListView>
    	</LinearLayout>
    </FrameLayout>	
    	
   
</LinearLayout>
