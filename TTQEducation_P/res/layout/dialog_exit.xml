<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linearlayout_frame_circle_white"
    android:padding="6dp"
    android:orientation="vertical" >
    
	<LinearLayout
	    android:id="@+id/exitCurrentID_layout" 
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:background="@color/item_one"
	    android:gravity="center_vertical">
	    <ImageView 
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_marginLeft="20dp"
	        android:background="@drawable/exit_user"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        android:text="退出当前账号"
	        android:textSize="18sp"
	        android:textColor="@drawable/btn_clicked_font_style"/>	    
	</LinearLayout>
	<ImageView 
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/gridline"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
	<LinearLayout 
	    android:id="@+id/closeSystem_layout"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:background="@color/item_one"
	    android:gravity="center_vertical">
	    <ImageView 
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_marginLeft="20dp"
	        android:background="@drawable/exit_sys"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        android:text="关闭系统"
	        android:textSize="18sp"
	        android:textColor="@drawable/btn_clicked_font_style"/>	    
	</LinearLayout>
    
</LinearLayout>
