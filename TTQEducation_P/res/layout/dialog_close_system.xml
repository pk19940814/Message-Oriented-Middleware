<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_center_bg"
    android:orientation="vertical" >
    
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@color/main_center_bg"
	    android:layout_margin="15dp"
	    android:text="    关闭后，你可能无法及时收到系统发送的消息，还可能影响到系统的试用体验"
	    android:textColor="@color/textGray"
	    android:textSize="18sp"/>
	<CheckBox
	    android:id="@+id/isRunBackgroundServer_checkBox" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
	    android:layout_marginBottom="15dp"
	    android:text="有新消息时在通知栏提醒"
	    android:checked="true"
	    android:textColor="@color/textGray"/>
	<ImageView 
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/gridline"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:orientation="horizontal">
	    <TextView 
	        android:id="@+id/cancle_textView"
	        android:layout_width="0dp"
	        android:layout_height="50dp"
	        android:layout_weight="1"
	        android:background="@drawable/listview_item_color"
	        android:gravity="center"
	        android:text="取消"
	        android:textColor="@color/textGray"
	        android:textSize="20dp"/>
	    <ImageView 
	        android:layout_width="1dp"
	        android:layout_height="match_parent"
	        android:background="@color/gridline"/>
	    <TextView
	        android:id="@+id/closeSystem_textView" 
	        android:layout_width="0dp"
	        android:layout_height="50dp"
	        android:layout_weight="1"
	        android:background="@drawable/listview_item_color"
	        android:gravity="center"
	        android:text="关闭系统"
	        android:textColor="@color/textGray"
	        android:textSize="20dp"/>
	    
	</LinearLayout>
    
</LinearLayout>
