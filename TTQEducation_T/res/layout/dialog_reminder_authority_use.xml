<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_send_info"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/titleReminder_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/btn_frame_circle_top"
        android:gravity="center"
        android:text="您未开通该功能！"
        android:textColor="@color/textBlack"
        android:textSize="20sp"/>
    <TextView 
        android:id="@+id/reminderInfo_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#f0f1f2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:text="        抱歉，该功能需要付费开通后才可使用，如有需要，请点击其他进行服务缴费，谢谢!"
        android:textSize="16sp"
        android:textColor="@color/textGray"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
	    <TextView 
	        android:id="@+id/IKnow_textView"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:padding="10dp"
	        android:background="@drawable/btn_frame_circle_bottom"
	        android:gravity="center"
	        android:text="我知道了"
	        android:textColor="@color/textBlue"
	        android:textSize="18sp"/>
	    <TextView 
	        android:id="@+id/tv_cancel"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:padding="10dp"
	        android:background="@drawable/btn_frame_circle_bottom"
	        android:gravity="center"
	        android:text="取消"
	        android:textColor="@color/textBlue"
	        android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>
