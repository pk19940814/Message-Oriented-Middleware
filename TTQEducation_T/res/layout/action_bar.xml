<?xml version="1.0" encoding="utf-8"?>
    
<!-- 类似于上面的anctionBar -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/actionBarHeight_size"
    android:gravity="center_vertical"
    android:background="@color/title_bgNew" 
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/title_back_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionBarHeight_size"
        android:background="@drawable/title_btn_back_color"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/title_back" />
        <TextView 
            android:id="@+id/titleBackTextView"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="返回"
            android:textColor="@color/textWhite"
            android:gravity="left"
            android:textSize="16sp"/>             
    </LinearLayout>
    
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="@dimen/title_centretext_size"
        android:textStyle="bold" />
    
    <LinearLayout 
        android:id="@+id/layout_rightBtn"
        android:layout_width="@dimen/actionBarHeight_size"
        android:layout_height="@dimen/actionBarHeight_size"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:visibility="invisible">
        <ImageView         
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:background="@drawable/add_notice"
        />
    </LinearLayout>
    
</RelativeLayout>
