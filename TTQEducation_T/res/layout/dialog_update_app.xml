<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linearlayout_frame_circle_gray"
    android:orientation="vertical" 
    >
    
    <TextView 
        android:id="@+id/titleReminder_textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:gravity="center"
        android:text="发现新版本"
        android:textColor="@color/textBlack"
        android:textSize="18sp"/>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/gridline"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView 
            android:id="@+id/currentVersion_textView"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="4dp"
	        android:text="当前版本：课课清 v1.0.0"
	        android:textSize="14sp"/>
        <TextView 
            android:id="@+id/updateVersion_textView"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="10dp"
	        android:text="新版本：课课清 v2.0.0"
	        android:textSize="14sp"/>
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/gridline"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView 
	        android:id="@+id/cancle_textView"
	        android:layout_width="0dp"
	        android:layout_height="40dp"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="以后再说"
	        android:textColor="@color/textBlue"
	        android:textSize="16sp"/>
        <View 
	        android:layout_width="0.2dp"
	        android:layout_height="match_parent"
	        android:background="@color/gridline"/>
        <TextView 
	        android:id="@+id/ok_textView"
	        android:layout_width="0dp"
	        android:layout_height="40dp"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="现在升级"
	        android:textColor="@color/textBlue"
	        android:textSize="16sp"/>
    </LinearLayout>
    
    
    
</LinearLayout>
