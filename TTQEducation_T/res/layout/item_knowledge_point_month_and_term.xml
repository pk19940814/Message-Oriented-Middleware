<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/tvOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="本科目知识点"
        android:textSize="20sp"
        android:textColor="@color/task_result_text"
        android:layout_gravity="center_horizontal" />
    
    <TextView
        android:id="@+id/tvRemark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11.17dp"
        android:text="知识点数量： 25"
        android:textSize="14sp"
        android:textColor="@color/task_result_text"
        android:layout_gravity="center_horizontal"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="19dp"
        >
        
        <!--班级均值  -->
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <LinearLayout
		        android:id="@+id/llArc1"
		        android:layout_width="fill_parent"
		        android:layout_height="76dp"
		        android:layout_marginLeft="4dp"
		        android:layout_marginRight="4dp"
		        android:gravity="center_horizontal"
		        android:layout_marginBottom="9dp"
		        android:orientation="vertical" >
    		</LinearLayout>
    		<RelativeLayout 
    		    android:layout_width="fill_parent"
    		    android:layout_height="20dp"
    		    android:gravity="center_horizontal">
    		    <ImageView
    		        android:id="@+id/iv11"
    		        android:layout_width="17dp"
    		        android:layout_height="13dp"
    		        android:src="@drawable/knowledge_point_4"
    		        android:layout_centerVertical="true"/>
    		    <TextView
    		        android:id="@+id/tv11"
    		        android:layout_width="wrap_content"
    		        android:layout_height="wrap_content"
    		        android:text=" 班级均值"
    		        android:textSize="14sp"
    		        android:textColor="@color/task_result_text"
    		        android:layout_centerVertical="true"
    		        android:layout_toRightOf="@id/iv11"/>	    
    		</RelativeLayout>
        </LinearLayout>
        
        <!--关注班级  -->
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
		        android:id="@+id/llArc2"
		        android:layout_width="fill_parent"
		        android:layout_height="76dp"
		        android:layout_marginLeft="4dp"
		        android:layout_marginRight="4dp"
		        android:layout_marginBottom="9dp"
		        android:gravity="center_horizontal"
		        android:orientation="vertical" >
	    	</LinearLayout>
    		<RelativeLayout 
    		    android:layout_width="fill_parent"
    		    android:layout_height="20dp"
    		    android:gravity="center_horizontal">
    		    <ImageView
    		        android:id="@+id/iv21"
    		        android:layout_width="17dp"
    		        android:layout_height="13dp"
    		        android:src="@drawable/knowledge_point_5"
    		        android:layout_centerVertical="true"/>
    		    <TextView
    		        android:id="@+id/tv21"
    		        android:layout_width="wrap_content"
    		        android:layout_height="wrap_content"
    		        android:text="关注班级"
    		        android:textSize="14sp"
    		        android:textColor="@color/task_result_text"
    		        android:layout_centerVertical="true"
    		        android:layout_toRightOf="@id/iv21"/>   		    
    		</RelativeLayout>
        </LinearLayout>
        
        <!--年级均值  -->
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
		        android:id="@+id/llArc3"
		        android:layout_width="fill_parent"
		        android:layout_height="76dp"
		        android:layout_marginLeft="4dp"
		        android:layout_marginRight="4dp"
		        android:layout_marginBottom="9dp"
		        android:gravity="center_horizontal"
		        android:orientation="vertical" >
	    	</LinearLayout>
    		<RelativeLayout 
    		    android:layout_width="fill_parent"
    		    android:layout_height="20dp"
    		    android:gravity="center_horizontal">
    		    <ImageView
    		        android:id="@+id/iv31"
    		        android:layout_width="17dp"
    		        android:layout_height="13dp"
    		        android:src="@drawable/knowledge_point_6"
    		        android:layout_centerVertical="true"/>
    		    <TextView
    		        android:id="@+id/tv31"
    		        android:layout_width="wrap_content"
    		        android:layout_height="wrap_content"
    		        android:text=" 年级均值"
    		        android:textSize="14sp"
    		        android:textColor="@color/task_result_text"
    		        android:layout_centerVertical="true"
    		        android:layout_toRightOf="@id/iv31"/>   		    
    		</RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View 
        android:layout_width="308.67dp"
        android:layout_height="0.1dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:background="#4EB6E6"/>
    
    <TextView 
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:text="单科成绩简评：优秀"
        android:textSize="12sp"
        android:textColor="@color/task_result_text"        
        />
    
</LinearLayout>
